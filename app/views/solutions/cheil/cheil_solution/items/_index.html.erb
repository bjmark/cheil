<%
  #solutions/cheil/cheil_solution/items/_index
#locals=>solution,total
%>
<table class="table">
  <tbody>
    <tr>
      <th></th>
      <th>名称</th>
      <th>数量</th>
      <th>说明</th>
      <th>单价</th>
      <th>合计</th>
      <th>创建者</th>
      <th></th>
    </tr>
    <%
      checked_designs=solution.checked_designs
      designs=solution.designs
    %>
    <%=render 'solutions/cheil/cheil_solution/items/kind',
      :solution=>solution,
      :checked_items=>checked_designs,
      :items=>designs,
      :kind_cn=>'设计' unless checked_designs.empty? and designs.empty?
    %>
    <%
      checked_products=solution.checked_products
      products=solution.products
    %>
    <%=render 'solutions/cheil/cheil_solution/items/kind',
      :solution=>solution,
      :checked_items=>checked_products,
      :items=>products,
      :kind_cn=>'制作' unless checked_products.empty? and products.empty?
    %>
    <%
      checked_trans=solution.checked_trans
      trans=solution.trans
    %>
    <%=render 'solutions/cheil/cheil_solution/items/kind',
      :solution=>solution,
      :checked_items=>checked_trans,
      :items=>trans,
      :kind_cn=>'运输' unless checked_trans.empty? and trans.empty?
    %>
    <%
      checked_others=solution.checked_others
      others=solution.others
    %>
    <%=render 'solutions/cheil/cheil_solution/items/kind',
      :solution=>solution,
      :checked_items=>checked_others,
      :items=>others,
      :kind_cn=>'其他' unless solution.others.empty?
    %>
  </tbody>
</table>
<table class="table">
  <tbody>
    <tr>
      <th></th>
      <th>名称</th>
      <th>总计</th>
      <th>税率</th>
      <th>税后总计</th>
    </tr>
    <%sum_items = total[:design]%>
    <%=render 'solutions/cheil/cheil_solution/items/kind_sum',
      :sum_items=>sum_items,
      :kind_cn=>'设计' unless sum_items.empty?
    %>

    <%sum_items = total[:product]%>
    <%=render 'solutions/cheil/cheil_solution/items/kind_sum',
      :sum_items=>sum_items,
      :kind_cn=>'制作' unless sum_items.empty?
    %>

    <%sum_items = total[:tran]%>
    <%=render 'solutions/cheil/cheil_solution/items/kind_sum',
      :sum_items=>sum_items,
      :kind_cn=>'运输' unless sum_items.empty?
    %>

    <%sum_items = total[:other]%>
    <%=render 'solutions/cheil/cheil_solution/items/kind_sum',
      :sum_items=>sum_items,
      :kind_cn=>'其他' unless sum_items.empty?
    %>
    <%sum_items = total[:all]%>
    <%=render 'solutions/cheil/cheil_solution/items/kind_sum',
      :sum_items=>sum_items,
      :kind_cn=>'' unless sum_items.empty?
    %>
  </tbody>
</table>

<p>
<%= link_to '新建运输项', new_item_path(:solution_id=>solution.id,:kind=>'tran')%>
|
<%= link_to '新建其他项', new_item_path(:solution_id=>solution.id,:kind=>'other')%>
</p>
