<%
  #briefs/items/_kind
#locals =>brief,items,kind_cn
%>
<%n=0
items.each do |e|%>
  <tr class="<%=['odd','even'][(n+=1)%2]%>">
    <%n.upto(1)do %>
      <td colspan="1" rowspan="<%=items.length%>"><%=kind_cn%></td>
    <%end%>
    <td><%= e.name  %></td>
    <td><%= e.quantity  %></td>
    <td><%= e.note  %></td>
    <td><%= e.price.to_f  %></td>
    <td><%= e.quantity.to_f * e.price.to_f %></td>
    <td class="last">
      <% if e.kind == 'design' or e.kind == 'product' %>
        <%= link_to '报价',price_item_path(e) %>
      <%else%>
        <%= link_to '修改',edit_item_path(e)  %>
        <%= link_to '删除',
          item_path(e), 
          :confirm => 'Are you sure?', 
          :method => :delete 
        %> 
      <%end%>
    </td>
  </tr>
<%end%>

