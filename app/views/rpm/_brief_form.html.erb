<%=form_for(@brief,:url=>@action_to) do|f|%>
  <% if @brief.errors.any? %>
    <div id="error_explanation">
      <h2>有<%= @brief.errors.count %>个错误:</h2>
      <ul>
        <% @brief.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  <%=f.label :name,'名称:'%>
  <%= f.text_field :name%>
  </p>
  <p>
  <%=f.label :req,'要求:'%><br/>
  <%=f.text_area :req,:size=>'60x3'%>
  </p>
  <p>
  <%=f.label :deadline,'期限:'%>
  <%= f.date_select :deadline,:use_month_numbers => true %>
  </p>
  <%=f.submit '保存' %>
<%end%> 

