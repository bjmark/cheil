  <%= link_to '新建制作项', rpm_new_item_path(brief,'product') %>
  <table>
    <tr>
      <th></th>
      <th>名称</th>
      <th>数量</th>
      <th></th>
    </tr>
    <%=render 'brief_items_tr',
      :items=>brief_designs,
      :kind=>'design',
      :kind_cn=>'设计'
    %>
    <%=render 'brief_items_tr',
      :items=>brief_products,
      :kind=>'product',
      :kind_cn=>'制作'
    %>
  </table>
<%end%>

