<h1>项目显示</h1>
<table>
  <tr>
    <th>id</th>
    <th>名称</th>
    <th>客户</th>
    <th>指派日期</th>
  </tr>
  <tr>
    <td><%= @brief.id  %></td>
    <td><%= simple_format(@brief.name)  %></td>
    <td><%= @brief.org.name%></td>
    <td><%= short_d(@brief_vendor.created_at)%></td>
  </tr>
</table>
<br/>
<table style="text-align: left; width: 100%;" border="1" cellpadding="2"
  cellspacing="2">
  <tbody>
    <tr>
      <td></td>
      <td >名称</td>
      <td>数量</td>
      <td>单价</td>
      <td>合计</td>
      <td></td>
    </tr>
    <%n=0
    @brief_vendor.designs.each do |e|%>
      <tr>
        <%(n+=1).upto(1)do %>
          <td colspan="1" rowspan="<%=@brief_vendor.designs.length+1%>">设计</td>
        <%end%>
        <td><%= simple_format(e.name)  %></td>
        <td><%= e.quantity  %></td>
        <td><%= e.price  %></td>
        <td><%= e.total%></td>
        <td><%=link_to '报价',vendor_item_edit_price_path(@brief,e)%></td>
      </tr>
    <%end%>
    <tr>
      <td colspan="5" rowspan="1">总计:<%=@brief_vendor.design_total%></td>
    </tr>
    <%n=0
    @brief_vendor.products.each do |e|%>
      <tr>
        <%(n+=1).upto(1)do %>
          <td colspan="1" rowspan="<%=@brief_vendor.products.length+1%>">制作</td>
        <%end%>
        <td><%= simple_format(e.name)  %></td>
        <td><%= e.quantity  %></td>
        <td><%= e.price  %></td>
        <td><%= e.total%></td>
        <td><%=link_to '报价',vendor_item_edit_price_path(@brief,e)%></td>
      </tr>
    <%end%>
    <tr>
      <td colspan="5" rowspan="1">总计:<%=@brief_vendor.product_total%></td>
    </tr>
    <%n=0
    @brief_vendor.trans_items.each do |e|%>
      <tr>
        <%(n+=1).upto(1)do %>
          <td colspan="1" rowspan="<%=@brief_vendor.trans_items.length+1%>">运输</td>
        <%end%>
        <td><%= simple_format(e.name)  %></td>
        <td><%= e.quantity  %></td>
        <td><%= e.price  %></td>
        <td><%= e.total%></td>
        <td>
          <%=link_to '修改',vendor_item_edit_path(@brief,e)%>
          <%=link_to '删除',vendor_item_del_path(@brief,e),confirm: 'Are you sure?', method: :delete %>
        </td>
      </tr>
    <%end%>
    <tr>
      <td colspan="5" rowspan="1">
        总计:<%=@brief_vendor.trans_total%><br/>
        <%=link_to '新建',vendor_item_new_path(@brief,'trans')%>
      </td>
    </tr>
    <%n=0
    @brief_vendor.others.each do |e|%>
      <tr>
        <%(n+=1).upto(1)do %>
          <td colspan="1" rowspan="<%=@brief_vendor.others.length+1%>">运输</td>
        <%end%>
        <td><%= simple_format(e.name)  %></td>
        <td><%= e.quantity  %></td>
        <td><%= e.price  %></td>
        <td><%= e.total%></td>
        <td>
          <%=link_to '修改',vendor_item_edit_path(@brief,e)%>
          <%=link_to '删除',vendor_item_del_path(@brief,e),confirm: 'Are you sure?', method: :delete %>
        </td>
      </tr>
    <%end%>
    <tr>
      <td colspan="5" rowspan="1">
        总计:<%=@brief_vendor.other_total%><br/>
        <%=link_to '新建',vendor_item_new_path(@brief,'other')%>
      </td>
    </tr>
    <tr>
      <td colspan="6" rowspan="1">
        (设计＋制作＋运输＋其他)共计:<%=@brief_vendor.design_total + @brief_vendor.product_total + @brief_vendor.trans_total + @brief_vendor.other_total%><br/>
      </td>
    </tr>
  </tbody>
</table>

