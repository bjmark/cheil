<h1>项目显示</h1>
<table>
  <tr>
    <th>id</th>
    <th>名称</th>
    <th>客户</th>
    <th>指派日期</th>
  </tr>
  <tr>
    <td><%= @brief.id  %></td>
    <td><%= simple_format(@brief.name)  %></td>
    <td><%= @brief.org.name%></td>
    <td><%= short_d(@brief_vendor.created_at)%></td>
  </tr>
</table>
<br/>
<table style="text-align: left; width: 100%;" border="1" cellpadding="2"
  cellspacing="2">
  <tbody>
    <tr>
      <td></td>
      <td >名称</td>
      <td>数量</td>
      <td>单价</td>
      <td>合计</td>
      <td></td>
    </tr>
    <%=render 'table1',:items=>@brief_vendor.designs,:kind=>'design',:kind_cn=>'设计'%>
    <%=render 'table1',:items=>@brief_vendor.products,:kind=>'product',:kind_cn=>'制作'%>
    <%=render 'table2',:items=>@brief_vendor.trans_items,:kind=>'trans',:kind_cn=>'运输'%>
    <%=render 'table2',:items=>@brief_vendor.others,:kind=>'other',:kind_cn=>'其他'%>
        <tr>
      <td colspan="6" rowspan="1">
        (设计＋制作＋运输＋其他)共计:<%=@brief_vendor.design_total + @brief_vendor.product_total + @brief_vendor.trans_total + @brief_vendor.other_total%><br/>
      </td>
    </tr>
  </tbody>
</table>

