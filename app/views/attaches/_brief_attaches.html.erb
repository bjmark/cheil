<%
  #partial =>  _brief_attaches
#locals => brief,brief_attaches,back
%>
<%unless brief_attaches.empty?%>
  <div class="block">
    <div class="secondary-navigation">
      <ul class="wat-cf">
        <li>
        <%= link_to '新建附件', new_brief_attach_path(brief,:back=>back) %>
        </li>
      </ul>
    </div>

    <div class="content">
      <h2 class="title">附件</h2>
      <div class="inner">
        <table class="table">
          <tbody>
            <tr>
              <th>文件名</th>
              <th></th>
            </tr>
            <%n=1
              brief_attaches.each do |e|%>
              <tr class="<%=['odd','even'][(n+=1)%2]%>">
                <td>
                  <%= e.attach_file_name  %>
                </td>
                <td class="last">
                  <%= link_to '下载',download_brief_attach_path(brief,e)%>
                  |
                  <%= link_to '更新',edit_brief_attach_path(brief,e,:back=>back)%>
                  |
                  <%=  link_to '删除',
                    brief_attach_path(brief,e,:back=>back), 
                    :confirm => 'Are you sure?', :method => :delete 
                  %>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<%end%>
