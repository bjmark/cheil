<%= form_for(@item,:url=>@path,:html=>{:class=>'form'}) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="group">
    <%= f.label :name,'名称',:class=>'label' %>
    <%= f.text_field :name,:class=>'text_field' %>
  </div>
  <div class="group">
    <%= f.label :quantity,'数量',:class=>'label' %>
    <%= f.text_field :quantity,:class=>'text_field' %>
  </div>
  <div class="group">
    <div>
      <%= f.radio_button :kind,'design',:class=>'checkbox' %>
      <%=f.label :kind,'设计项',:class=>'radio'%>
    </div>
    <div>
      <%= f.radio_button :kind,'product',:class=>'checkbox' %>
      <%=f.label :kind,'制作项',:class=>'radio'%>
    </div>
  </div>
  <div class="group">
    <%= f.submit '提交' %>
    <%= link_to '取消', @back %>
  </div>
<% end %>
