  render 'share/block',
  :nav=>{:partial=>'briefs/cheil/nav',:locals=>{:brief=>@brief}},
  :title=>@brief.name,
  :content=>{:partial=>'briefs/content',:locals=>{:brief=>@brief}}
=end
