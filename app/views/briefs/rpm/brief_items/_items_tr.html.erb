<%
  #partial => _brief_items_tr
#locals => brief,items,kind,kind_cn,back
%>
<%unless items.empty?%>
  <%n=0
  items.each do |e|%>
    <tr class="<%=['odd','even'][(n+=1)%2]%>">
      <%n.upto(1)do %>
        <td colspan="1" rowspan="<%=items.length%>"><%=kind_cn%></td>
      <%end%>
      <td><%= e.name  %></td>
      <td><%= e.quantity  %></td>
      <td class="last">
        <%= link_to '修改',edit_brief_item_path(brief,e)  %>
        <%= link_to '删除',
          brief_item_path(brief,e), 
          :confirm => 'Are you sure?', 
          :method => :delete 
        %> 
      </td>
    </tr>
  <%end%>
<%end%>

