<%=form_tag create_many_brief_items_path(:brief_id=>@brief.id) do%>
  <table class="">
    <tr>
      <th>序号</th>
      <th>名称</th>
      <th>数量</th>
      <th>说明</th>
      <th>类型</th>
    </tr>
    <%@item_count.times do |n|%>
      <tr>
        <td><%=n+1%></td>
        <td>
          <%=text_field_tag "brief_item[name_#{n}]",@brief_item["name_#{n}"]%>
        </td>
        <td>
          <%=text_field_tag "brief_item[quantity_#{n}]",@brief_item["quantity_#{n}"]%>
        </td>
        <td>
          <%=text_field_tag "brief_item[note_#{n}]",@brief_item["note_#{n}"]%>
        </td>
        <td>
          <select name="<%="brief_item[kind_#{n}]"%>" size="1">
            <option value="design" label="design" <%=brief_item_kind_selected(n,'design',@kind_default)%>>
            设计
            </option>
            <option value="product" label="product" <%=brief_item_kind_selected(n,'product',@kind_default)%>>
            制作
            </option>
          </select> 
        </td>
      </tr>
    <%end%>
  </table>
  <%=button_tag(:type=>:submit,:id=>'b1',:name=>'save_many') do%>
    <%='保存'%>
  <%end%>
  <%=button_tag '增加5个设计',:type=>:submit,:name=>'add_5_design'%>
  <%=button_tag '增加5个制作',:type=>:submit,:name=>'add_5_product'%>
  &nbsp;&nbsp;
  <%=link_to '取消',brief_path(@brief)%>
<%end%>

